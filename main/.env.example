# Copy this file to .env and fill in your values
# cp .env.example .env          (macOS/Linux)
# copy .env.example .env        (Windows)

OCR_ENGINE=tesseract

# macOS Homebrew:   /opt/homebrew/bin/tesseract
# Linux:            /usr/bin/tesseract
# Windows:          C:\Program Files\Tesseract-OCR\tesseract.exe
TESSERACT_PATH=/opt/homebrew/bin/tesseract
TESSERACT_LANG=eng
TESSERACT_OEM=1
TESSERACT_PSM=3

SARVAM_API_KEY=your_sarvam_key_here

# macOS/Linux: ../../Meta-Llama-3.1-8B-Instruct-Q4_K_M.gguf
# Windows (recommended absolute path):
# C:\Users\YourName\Desktop\govt-doc\Meta-Llama-3.1-8B-Instruct-Q4_K_M.gguf
LLM_MODEL_PATH=../../Meta-Llama-3.1-8B-Instruct-Q4_K_M.gguf
LLM_N_CTX=4096
LLM_N_GPU_LAYERS=0
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=512
LLM_TOP_P=0.95

EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

CHUNK_SIZE=400
CHUNK_OVERLAP=50

TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.3

HOST=0.0.0.0
PORT=8000
RELOAD=True
DEBUG=True

MAX_FILE_SIZE_MB=20

CORS_ORIGINS=http://localhost:5173,http://localhost:3000
